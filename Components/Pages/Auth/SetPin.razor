@inject IAuthService Auth
@using Icons = Microsoft.FluentUI.AspNetCore.Components.Icons

<div class="auth-container">
    <div class="auth-card">
        <h3>Set Your PIN</h3>
        <p class="auth-subtitle">Create a 4-digit PIN to secure your entries</p>


        <input type="password"
       class="auth-input"
       placeholder="0000"
       maxlength="4"
       @bind="pin"
       @bind:event="oninput"
       @onkeydown="HandleKeyDown"
       @ref="pinInput" />

<button class="auth-btn"
        @onclick="SavePin">
    Confirm
</button>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="validation-message">@errorMessage</p>
        }
    </div>
</div>