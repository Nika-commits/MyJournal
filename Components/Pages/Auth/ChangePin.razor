@page "/change-pin"
@using MyJournal.Components.Pages.Auth

        @if (!isVerified)
        {
            <div class="step-content fade-in">
                <h3>Verify It's You</h3>
                <p class="subtitle">Enter your current PIN to continue.</p>
                
                <UnlockPin OnSuccess="HandleVerified" />
                
                <button class="btn-cancel" @onclick="Cancel">Cancel</button>
            </div>
        }
        else
        {
            <div class="step-content slide-in">
                <div class="icon-header">✨</div>
                <h3>Create New PIN</h3>
                <p class="subtitle">Enter the new 4-digit code you want to use.</p>

                <SetPin OnSuccess="HandlePinChanged" />
                
                <button class="btn-cancel" @onclick="Cancel">Cancel</button>
            </div>
        }
